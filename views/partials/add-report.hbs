<form class="box" action="/station/{{station._id}}/addreport" method="POST">
  
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <label> Code</label>
        <input class="input" type="text"  placeholder="Between 200-800" name="code">
      </div>
      
      <div class="field">
        <label> Temp</label>
        <input class="input" type="text" placeholder="0-15" name="temperature">
      </div>
      <div class ="field">
        <label> Wind Speed</label>
        <input class="input" type="text" placeholder="1-9" name="windSpeed">
      </div>
      <div class ="field">
        <label>Wind Direction</label>
        <input class ="input" type="text" placeholder="000 deg" name="windDirection">
      </div>
      <div class="field">
        <label>Pressure</label>
        <input class= "input" type="text" placeholder="900-1050" name="pressure">
      </div>
    </div>
  </div>
  <button class="button is-link">
    Submit Report
  </button>
</form>